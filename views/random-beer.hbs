{{#each beersRandomFromApi}}
<div class="infoCervezas">
    <img src={{this.image_url}} class="beer"/>
    <div class="info">
        <p>
            <h3>{{this.name}}</h3>
            <p class="light">{{this.tagline}}</p>
        </p>
        <p>{{this.description}}</p>
        <p>{{this.brewers_tips}}</p>
        <p>{{this.id}}</p>
        <ul>
            <li>{{this.food_pairing}}</li>
        </ul>
    </div>
</div>
{{/each}}